<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/title_sensibility_global"
        app:summary="@string/summary_sensibility_global">

        <SeekBarPreference
            android:layout_width="match_parent"
            android:defaultValue="0"
            android:max="5"
            app:key="noise"
            app:showSeekBarValue="true"
            app:summary="@string/summary_sensibility_noise"
            app:title="@string/title_sensibility_noise" />


        <SeekBarPreference
            android:defaultValue="0"
            android:max="5"
            app:key="crowd"
            app:showSeekBarValue="true"
            app:singleLineTitle="false"
            app:summary="@string/summary_sensibility_crowd"
            app:title="@string/title_sensibility_crowd" />

        <SeekBarPreference
            android:defaultValue="0"
            android:max="5"
            app:key="light"
            app:showSeekBarValue="true"
            app:summary="@string/summary_sensibility_light"
            app:title="@string/title_sensibility_light" />

    </PreferenceCategory>
</PreferenceScreen>